    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "python": "${command:python.interpreterPath}",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            // "args": [
            //     "--source_dir",
            //     "/workspace/datasets/product_data/products"
            // ]
            "args": [
                "--vector",
            ]
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (simplest configuration)",
            "program": "${file}",
            "args": [
                "--train",
                "--learning_rate=1.0",
                "--epoch=25",
                "--ngrams=2"
            ]
        }
    ]
}